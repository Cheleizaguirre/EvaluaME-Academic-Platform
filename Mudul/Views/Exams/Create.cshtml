@model Mudul.EntityModels.Exam

@{
    ViewData["Title"] = "Crear Examen";
    Layout = "_LayoutTeacher";
}

<h1>Crear Examen</h1>
<h4>Exámenes</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Muestra todos los errores de validación -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Campo oculto para SubjectId -->
            <input type="hidden" asp-for="SubjectId" />
            <div class="form-group">
                <label>Asignatura</label>
                <input type="text" class="form-control" value="@ViewBag.SubjectName" readonly />
            </div>

            <!-- Campo oculto para TeacherId -->
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label>Profesor</label>
                <input type="text" class="form-control" value="@ViewBag.TeacherName" readonly />
            </div>

            <div class="form-group">
                <label for="Title" class="control-label">Título</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Description" class="control-label">Descripción</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="PublishDate" class="control-label">Fecha a asignar examen</label>
                <input asp-for="PublishDate" class="form-control" type="date" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ExamType" class="control-label">Tipo de Examen</label>
                <select asp-for="ExamType" class="form-control">
                    <option value="Jobe" selected="selected">Jobe</option>
                    <option value="H5P">H5P</option>
                </select>
                <span asp-validation-for="ExamType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="TimeLimit" class="control-label">Tiempo Límite (minutos)</label>
                <input asp-for="TimeLimit" class="form-control" type="number" min="0" />
                <span asp-validation-for="TimeLimit" class="text-danger"></span>
            </div>

            <!-- Campo oculto para H5pcontentId (autogenerado) -->
            <input type="hidden" asp-for="H5pcontentId" value="@Guid.NewGuid().ToString()" />

            <!-- Campo oculto para Status -->
            <input type="hidden" asp-for="Status" value="ACTIVE" />

            <div class="form-group">
                <input type="submit" value="Crear Examen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
