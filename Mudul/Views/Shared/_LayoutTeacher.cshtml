@using Mudul.Helpers

@{
	Layout = "_LayoutAdminLTE";
}

<!-- CustomStyles -->
@RenderSection("CustomStyles", required: false)
<!-- /.CustomStyles -->

@section SidebarItems {
	<!-- Home view -->
	<li class="nav-item">
		<a href="@Url.Action("Index","Teacher")" class="nav-link @Html.IsActive("Index","Teacher")">
			<i class="nav-icon fas fa-home"></i>
			<p>Inicio</p>
		</a>
	</li>

	<!-- Subject Views [DropDown Menu] -->
	<li class="nav-item">
		<a href="#" class="nav-link">
			<i class="nav-icon fas fa-book-open"></i>
			<p>
				Clases
				<i class="right fas fa-angle-left"></i>
			</p>
		</a>
		<!-- Teacher subjects [List on View] -->
		<ul class="nav nav-treeview">
			@await Component.InvokeAsync("TeacherSubjects")
		</ul>
	</li>

	<!-- Student Registration -->
	<li class="nav-item">
		<a href="@Url.Action("Index","Enrollment")" class="nav-link @Html.IsActive("Index","Enrollment")">
			<i class="nav-icon fa-solid fa-address-card"></i>
			<p>Matricular Estudiante</p>
		</a>
	</li>

	<!-- Profile View -->
	<li class="nav-item">
		<a href="@Url.Action("Profile","Teacher")" class="nav-link @Html.IsActive("Profile","Teacher")">
			<i class="nav-icon fas fa-user"></i>
			<p>Perfil</p>
		</a>
	</li>
   



}



<!-- Main content -->
@RenderBody()
<!-- /.content -->
<!-- Scripts content-->
@await RenderSectionAsync("Scripts", required: false)
<!-- /.scripts-->
