<!-- SECCIÓN 2: Estilos personalizados -->
<style>
    /* Estilo principal del contenedor */
    .card-tabs {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    /* Acordeones */
    .accordion-button {
        font-weight: 600;
        padding: 15px;
    }

        .accordion-button:not(.collapsed) {
            background-color: #3498db;
            color: white;
        }

    .accordion-body {
        padding: 0;
    }

    /* Tabla de calificaciones */
    .table-calificaciones {
        width: 100%;
        margin-bottom: 0;
    }

        .table-calificaciones thead th {
            background-color: #2c3e50;
            color: white;
            border: none;
            padding: 12px 15px;
        }

        .table-calificaciones tbody td {
            padding: 12px 15px;
            vertical-align: middle;
        }

        .table-calificaciones tr:nth-child(even) {
            background-color: #f8f9fa;
        }

    /* Badges de estado */
    .badge-estado {
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .aprobado {
        background-color: #28a745;
        color: white;
    }

    .reprobado {
        background-color: #dc3545;
        color: white;
    }

    /* Totales */
    .total-parcial {
        background-color: #e9ecef;
        padding: 15px;
        font-weight: 600;
        border-radius: 0 0 5px 5px;
    }

    .total-curso {
        background-color: #d4edda;
        color: #155724;
        padding: 20px;
        font-size: 1.2em;
        font-weight: 700;
        text-align: center;
        border-radius: 5px;
        margin-top: 30px;
    }

    /* Pestañas */
    .nav-tabs .nav-link {
        font-weight: 500;
    }

        .nav-tabs .nav-link.active {
            border-bottom: 3px solid #3498db;
            font-weight: 600;
        }
</style>

